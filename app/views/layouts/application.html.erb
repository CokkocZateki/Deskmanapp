<!DOCTYPE html>
<html>
<head>
  <title>Deskmanapp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class='navbar navbar-static-top navbar-inverse' role='navigation'>
	<div class='container'>
		<div class='navbar-header'>
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to "DeskMan", root_path, class: 'navbar-brand' %>
		</div>
		<div class='navbar-collapse collapse'>
			<ul class='nav navbar-nav'>	
				<li class=<%= 'active' if 
					"/users/#{session[:user_id]}" == request.path %> >
					<%= link_to "Home", static_home_path %>
				</li>
				<li><%= link_to "Calendar", static_calendar_path %></li>
				<li><%= link_to "Shifts", shifts_path %></li>
				<li><%= link_to "Users", users_path %></li>
			</ul>
			<ul class='nav navbar-nav navbar-right'>
				<% if current_user %>
					<li><p class='navbar-text'>Logged in as <%= current_user.username %></p></li>
					<li><%= link_to "Logout", log_out_path %></li>
				<% else %>
					<li><%= link_to "Log In", log_in_path %></li>
					<li><%= link_to "Signup", new_user_path %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
<div class='container'>
	<% flash.each do |key, value| %>
	        <div class="<%= flash_class(key) %>">
	              <%= value %>
	        </div>
	  <% end %>
	<%= yield %>
	<div ></div>
</div>
</body>
</html>
