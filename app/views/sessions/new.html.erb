<h1 class='page-header'>Log In</h1>
<%= form_tag sessions_path, class: 'form-horizontal' do %>
	<div class='form-group'>
		<%= label_tag :email, nil, class: 'control-label col-sm-2' %>
		<div class='col-xs-3'>
			<%= text_field_tag :email, params[:email], class: 'form-control' %>
		</div>
	</div>
	<div class='form-group'>
		<%= label_tag :password, nil, class: 'control-label col-sm-2' %>
		<div class='col-xs-3'>
			<%= password_field_tag :password, nil, class: 'form-control' %>
		</div>
	</div>
	<div class='form-group'>
		<div class='col-xs-4'></div>
		<div class='col-xs-1'>
			<%= submit_tag "Log in", class: 'form-control btn btn-default' %>
		</div>
	</div
<% end %>