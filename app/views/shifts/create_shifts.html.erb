<h1 class='page-header'>Create Shifts
	<small>Use this form to create a block of shifts</small>
</h1>
<%= form_tag shifts_create_shifts_path, class: 'form-horizontal' do %>


  <div class='form-group field'>
  	<%=  label_tag 'shift_start', 'Shift Period Start',
  	 class: 'control-label col-sm-2' %>
  	<%= select_date Time.now, prefix: 'shifts_start', 
  	order: [:year, :month, :day], class: 'form-control' %>, 
  	<%= select_hour Time.now, prefix: 'shifts_start', class: 'form-control' %>
  </div>
  <div class='form-group field'>
  	<%= label_tag 'shifts_end', 'Shift Period End',
  	 class: 'control-label col-sm-2' %>
  	<%= select_date (Time.now+1), prefix: 'shifts_end', order: [:year, :month, :day], class: 'form-control' %>, 
  	<%= select_hour Time.now+1, prefix: 'shifts_end', class: 'form-control' %>
  </div>
  <div class='form-group field'>
  	<%= label_tag 'Shifts Per Day', nil, class: 'control-label col-sm-2' %>
  </div>
  <div class='form-group field'>
  	<%= label_tag 'Desk', nil, class: 'control-label col-sm-2' %>
  	<div class='checkbox'>
      <% Desk.all.each do |i| %>
        <label for='<%= i.name %>'>
          <%= check_box_tag "Desk[#{i.id}]", i.id %>
          <%= i.name %>
        </label>
    	<% end %>
    </div>
  </div>
  <div class='form-group field'>
  	<%= label_tag 'Custom Shifts', nil, class: 'control-label col-sm-2' %>
  </div>
  <div class='form-group field'>
  	<%= label_tag 'Special Pay', nil, class: 'control-label col-sm-2' %>
  </div>
  <div class='form-group field'>
  	<%= label_tag 'Normal Graveyard Shifts', nil,
  	 class: 'control-label col-sm-2' %>
  </div>
  <div class='form-group field'>
  	<%= label_tag 'Specify Holidays', nil, class: 'control-label col-sm-2' %>
  </div>
  <div class="form-group actions">
    <div class='col-sm-2'></div
    <div class='col-xs-4'><%= submit_tag 'Submit', class: 'btn btn-default' %></div>
  </div>
<% end %>
