<h1>Listing shifts</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Desk</th>
      <th>User</th>
      <th>Specialpay</th>
      <th>Graveyardshift</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.shift_start %></td>
        <td><%= shift.shift_end %></td>
        <td><%= shift.desk %></td>
        <td><%= shift.user_id %></td>
        <td><%= shift.specialpay %></td>
        <td><%= shift.graveyardshift %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

