<p id="notice"><%= notice %></p>
<div class='btn-group btn-default btn-group-sm'>
  <% if current_user && (current_user.accesslevel == 'admin') %>
    <%= link_to 'Edit', edit_shift_path(@shift), class: 'btn btn-default' %>
  <% end %>
  <%= link_to 'Back', shifts_path, class: 'btn btn-default' %>
</div>
<p>
  <strong>Start:</strong>
  <%= @shift.shift_start %>
</p>

<p>
  <strong>End:</strong>
  <%= @shift.shift_end %>
</p>

<p>
  <strong>Desk:</strong>
  <%= Desk.find_by_id(@shift.desk_id).name %>
</p>

<p>
  <strong>User:</strong>
  <%= User.find_by_id(@shift.user_id).username %>
</p>

<p>
  <strong>Sub needed:</strong>
  <%= @shift.sub_needed %>
</p>

<p>
  <strong>Specialpay:</strong>
  <%= @shift.specialpay %>
</p>

<p>
  <strong>Graveyardshift:</strong>
  <%= @shift.graveyardshift %>
</p>

