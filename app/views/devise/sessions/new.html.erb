<h2 class='page-header'>Log in</h2>

<%= form_for(resource, as: resource_name, 
html: {class: 'form-horizontal'}, 
url: session_path(resource_name)) do |f| %>
  <div class='form-group'>
  	<%= f.label :email, class: 'control-label col-sm-2' %>
  	<div class='col-xs-3'>
  	  <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
  	<%= f.label :password, class: 'control-label col-sm-2' %>
  	<div class='col-xs-3'>
    <%= f.password_field :password, autocomplete: "off", 
    class: 'form-control col-xs-3' %>
	</div>

	</div>

	<div class='col-xs-offset-2'>
	  <% if devise_mapping.rememberable? -%>
	    <div class='form-group field'> 
	    	<%= f.label :remember_me, class: 'control-label' do %>
	    	  <%= f.check_box :remember_me, class: 'checkbox' %>
	    	  Remember Me
	    	<% end %>
	    </div>
	  <% end -%>

	  <div class='form-group'>
	  	<%= f.submit "Log in", class: 'btn btn-default' %>
	  </div>
	<% end %>

		<%= render "devise/shared/links" %>
	</div>