<h1 class='page-header'>Listing users <%= link_to 'New User', new_user_path, class: 'btn btn-default'  %></h1>

<table class='table'>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Homedesk</th>
      <th>Accesslevel</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.homedesk %></td>
        <td><%= user.accesslevel %></td>
        <td>
          <div class='btn-group'>
            <%= link_to 'Show', user, class: 'btn' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn'  %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn'  %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

