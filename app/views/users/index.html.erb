<h1 class='page-header'>Listing users
<% if current_user %>
  <%= link_to 'New User', new_user_path, class: 'btn btn-default'  %>
<% end %>
</h1>
<table class='table'>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Home Desk</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= Desk.all.find_by_id(user.desk_id).name %></td>
        <td><%= user.accesslevel %></td>
        <td>
          <div class='btn-group'>
            <%= link_to 'Show', user, class: 'btn' %>
            <% if current_user && (current_user.accesslevel == 'admin') %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn'  %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn'  %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

