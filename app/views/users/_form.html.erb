<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :username, class: 'control-label col-sm-2' %>
    <div class='col-xs-3'>
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class='col-xs-4'>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :desk_id, class: 'control-label col-sm-2' %>
    <div class='col-xs-3'>
      <% desk_options = Desk.all.map { |desk| [desk.name, desk.id] }%>
      <%= f.select :desk_id, options_for_select(desk_options), 
      class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class='col-xs-3'>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
    <div class='col-xs-3'>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :role, class: 'control-label col-sm-2' %>
    <div class='col-xs-2'>
      <%= f.text_field :role, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group actions">
    <div class='col-sm-2'></div>
    <div class='col-xs-4'><%= f.submit class: 'btn btn-default' %></div>
  </div>
<% end %>
